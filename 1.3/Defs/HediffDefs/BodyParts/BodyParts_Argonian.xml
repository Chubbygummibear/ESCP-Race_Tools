<Defs>

	<!-- Argonian stomach -->
	
	<HediffDef ParentName="AddedBodyPartBase">
		<defName>ESCP_ArgonianStomach</defName>
		<label>Argonian stomach</label>
		<labelNoun>an Argonian stomach</labelNoun>
		<description>An Argonian stomach.</description>
		<descriptionHyperlinks><ThingDef>ESCP_ArgonianStomach</ThingDef></descriptionHyperlinks>
		<spawnThingOnRemoved>ESCP_ArgonianStomach</spawnThingOnRemoved>
		<woundAnchorRange>0</woundAnchorRange>
		<displayWound>false</displayWound>
		<addedPartProps>
		  <solid>true</solid>
		  <partEfficiency>1.0</partEfficiency>
		  <betterThanNatural>true</betterThanNatural>
		</addedPartProps>
		<stages>
			<li>
				<minSeverity>0.0</minSeverity>
			</li>
		</stages>
		<comps>

		</comps>
	</HediffDef>

	<ThingDef ParentName="BodyPartNaturalBase">
		<defName>ESCP_ArgonianStomach</defName>
		<label>Argonian stomach</label>
		<description>An Argonian stomach. Fairly similar to any ordinary stomach, except that it prevents food poisoning.</description>
		<descriptionHyperlinks><RecipeDef>ESCP_InstallArgonianStomach</RecipeDef></descriptionHyperlinks>
		<thingSetMakerTags><li>RewardStandardLowFreq</li></thingSetMakerTags>
		<statBases>
		  <MarketValue>500</MarketValue>
		  <Mass>0.3</Mass>
		</statBases>
	</ThingDef>

	<RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
		<defName>ESCP_InstallArgonianStomach</defName>
		<label>implant Argonian stomach</label>
		<description>Implant an Argonian stomach.</description>
		<descriptionHyperlinks>
		  <ThingDef>ESCP_ArgonianStomach</ThingDef>
		  <HediffDef>ESCP_ArgonianStomach</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing Argonian stomach.</jobString>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>ESCP_ArgonianStomach</li>
			  </thingDefs>
			</filter>
			<count>1</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>ESCP_ArgonianStomach</li>
		  </thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
		  <li>Stomach</li>
		</appliedOnFixedBodyParts>
		<addsHediff>ESCP_ArgonianStomach</addsHediff>
	</RecipeDef>


